<%- |
Hash $options,
| -%>
#!/bin/bash
app=${1:-'no'}
infoblock=${2:-'all'}

# Source helper functions
. <%= $tp::tp_dir %>/lib/functions.sh

# Set tinydata as vars
eval $(parse_yaml "/etc/tp/app/${app}" "")

if [ "$infoblock" != 'all' ]; then
    . "<%= $tp::tp_dir %>/info/${infoblock}"
else
    for f in $(ls -1 <%= $tp::tp_dir %>/info/) ; do
        . "<%= $tp::tp_dir %>/info/${f}"
    done
fi